<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/black"
    tools:context=".LoginFragment">

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/text"
        android:layout_marginTop="80dp"
        android:src="@drawable/melo_logo_fill"
        />

    <TextView
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/inter_bold"
        android:text="Millions of Song.\nFree on MeloSphere."
        android:textAlignment="center"
        android:textColor="@color/white"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="300dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="25dp"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/SignUp_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text"
        android:layout_margin="30dp"
        android:background="@drawable/solid_button"
        android:text="SignUp for Free"
        android:textColor="@color/black"
        android:textAllCaps="false"
        android:textSize="16dp"
        android:fontFamily="@font/inter_semibold"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/google_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/SignUp_button"
        android:layout_marginTop="10dp"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:background="@drawable/transparent_button"
        android:text="Continue with Google"
        android:textColor="@color/white"
        android:textAllCaps="false"
        android:textSize="16dp"
        android:fontFamily="@font/inter_semibold"
        />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toTopOf="@+id/google_button"
        app:layout_constraintBottom_toBottomOf="@+id/google_button"
        app:layout_constraintLeft_toLeftOf="@+id/google_button"
        android:src="@drawable/google_logo"
        android:layout_marginLeft="10dp"
        android:elevation="10dp"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/facebook_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/google_button"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/transparent_button"
        android:text="Continue with Facebook"
        android:textColor="@color/white"
        android:textAllCaps="false"
        android:textSize="16dp"
        android:fontFamily="@font/inter_semibold"
        />

    <ImageView
        android:layout_width="35dp"
        android:layout_height="35dp"
        app:layout_constraintTop_toTopOf="@+id/facebook_button"
        app:layout_constraintBottom_toBottomOf="@+id/facebook_button"
        app:layout_constraintLeft_toLeftOf="@+id/facebook_button"
        android:src="@drawable/facebook_logo"
        android:layout_marginLeft="10dp"
        android:elevation="10dp"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/transparent_button"
        app:layout_constraintTop_toBottomOf="@id/facebook_button"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:text="Continue with Phone Number"
        android:textColor="@color/white"
        android:textAllCaps="false"
        android:fontFamily="@font/inter_semibold"
        android:textSize="16dp"
        />
    <ImageView
        android:layout_width="35dp"
        android:layout_height="35dp"
        app:layout_constraintTop_toTopOf="@+id/phone"
        app:layout_constraintBottom_toBottomOf="@+id/phone"
        app:layout_constraintLeft_toLeftOf="@+id/phone"
        android:src="@drawable/phone_logo"
        android:layout_marginLeft="10dp"
        android:elevation="10dp"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/loginButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login"
        android:textAllCaps="false"
        app:layout_constraintTop_toBottomOf="@+id/phone"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="10dp"
        android:background="#0000"
        android:textColor="#ffff"
        android:textSize="18dp"
        android:fontFamily="@font/inter_semibold"
        />



</androidx.constraintlayout.widget.ConstraintLayout>